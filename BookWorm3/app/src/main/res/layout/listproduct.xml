<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="139dp"
        android:layout_marginLeft="12dp"
        android:background="#C1320C42"
        android:backgroundTint="#C1320C42"
        app:cardCornerRadius="15dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="125dp"
            android:layout_height="127dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            app:srcCompat="@drawable/lilian2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="239dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Don't Tell Me You're Afraid"
            android:textAlignment="center"
            android:textColor="#DAC5C5"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="137dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="By:J.Catozzella"
            android:textAlignment="textStart"
            android:textColor="#DAC5C5"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="73dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Price:"
            android:textAlignment="textStart"
            android:textColor="#DAC5C5"
            android:textSize="21sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="189dp"
            android:layout_marginTop="73dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="3.00"
            android:textAlignment="textStart"
            android:textColor="#99A5D1"
            android:textSize="21sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="229dp"
            android:layout_marginTop="73dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="KD"
            android:textAlignment="textStart"
            android:textColor="#7BD5CC"
            android:textSize="21sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imageView2"
            android:layout_width="55dp"
            android:layout_height="63dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="72dp"
            app:srcCompat="@drawable/dustbin" />
    </androidx.cardview.widget.CardView>
</LinearLayout>